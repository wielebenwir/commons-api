{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://github.com/wielebenwir/commons-api/blob/master/velogistics-api.schema.json",
    "title": "Velogistics Api",
    "description": "Extension of the Commons Api for cargo bikes",
    "allOf": [
        {
            "$ref": "https://github.com/wielebenwir/commons-api/blob/master/commons-api.schema.json"
        },
        {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "itemType": {
                                "type": "string"
                            },
                            "features": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "isCommercial": {
                                "type": "boolean"
                            },
                            "loadCapacity": {
                                "type": "number"
                            },
                            "boxDimensions": {
                                "type": "object",
                                "properties": {
                                    "length": { "type": "number" },
                                    "width": { "type": "number" },
                                    "height": { "type": "number" }
                                }
                            }
                        }
                    },
                    "uniqueItems": true
                }
            }
        }
    ]
}
